{% extends "layout.njk" %}


{% block content %}
    <div class="card table-container">
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Learn</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{ teacher.avatar_url }})">

                        </span>
                        {{ teacher.name }}</td>
                    <td><span>{{ teacher.learn }}</span></td>
                    <td><a href="/teachers/{{ teacher.id }}"><span class="material-icons">visibility</span></a></td>
                </tr>  
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}