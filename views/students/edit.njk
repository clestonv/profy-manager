{% extends "layout.njk" %}
{% block head%}
    <title>Proff | Update
    </title>
    {% endblock%}
    {% block content %}
        <div class="card">
            
            <section class="avatar" style="background: url({{ students.avatar_url }}) no-repeat  center center / cover">
            </section>

            <section class="details">
                <form method="POST" action="/students?_method=PUT">

                    <h3>Edit Student</h3>

                    {% include 'students/fields.njk' %}

                    <input type="hidden" name="id" value="{{ students.id }}">
                    <div class="button-side">
                        <button type="submit">Salvar</button>
                        <button type="submit" form="form-delete">Deletar</button>
                    </div>
                    
                </form>

                <form id="form-delete" action="/students?_method=DELETE" method="POST">
                    <input type="hidden" name="id" value=" {{ students.id }} ">
                    
                </form>

            </section>
        </div>

    {% endblock content %}