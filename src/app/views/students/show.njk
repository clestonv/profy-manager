{% extends "layout.njk" %}


{% block content %}
    <div class="card">
        <section
            class="picture"
            style="background: url({{ students.avatar_url }}) no-repeat center center / cover"
        >        
        </section>

        <section class="details">

            <h3>About</h3>
            <div class="item ite-bord"">
                <div> Student </div>
                <div> {{ students.name }}</div>
            </div>
            <div class="item">
                <div> Email </div>
                <div> {{ students.email }}</div>
            </div>
            <div class="item">
                <div> Idade </div>
                <div> {{ students.birth_date }} Anos</div>
            </div>
            <div class="item">
                <div> Sexo </div>
                <div> {{ "Masculino" if students.gender == "M" else "Feminino"}} </div>
            </div>
            <div class="item">
                <div> Ano Escolar </div>
                <div> {{ students.year_learn }}º Ano </div>
            </div>
            <div class="item">
                <div> Tipo de Aula </div>
                <span>
                    {{ students.class_type }}
                </span>
            </div>
            <div class="item">
                <div> Carga Horária </div>
                <div>                    
                    <span>{{ students.count_hours }} Horas</span>            
                </div>
            </div>
            <div class="item">
                <div> Aluno(a) De</div>
                <div>                    
                    <span>Prof {{ students.teacher_name }}</span>            
                </div>
            </div>
            <div class="item">
                <div> Desde </div>
                <div> {{ students.created_at }}</div>
            </div>
            <a href="/students/{{ students.id }}/edit" class="button">Editar</a>
        </section>

    </div>
{% endblock %}