{% extends "layout.njk" %}


{% block content %}
    <div class="card table-container">

        <div class="header">
            <a href="/students/create">
                <span class="material-icons">add</span>Student
            </a>     
            <form action="/students" method="GET">
                <input 
                    type="text"
                    name="filter"
                    placeholder="Atendimento OU Nome"
                >
                <button type="submit">Filtrar</button>
            </form>     
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Email</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td>
                        <span style="background-image: url({{ student.avatar_url }})">

                        </span>{{ student.name }}</td>
                    <td><span>{{ student.email }}</span></td>
                    <td><a href="/students/{{ student.id }}"><span class="material-icons">visibility</span></a></td>
                </tr>  
                {% endfor %}
            </tbody>
        </table>

         <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}>        
        </div>

    </div>
{% endblock %}